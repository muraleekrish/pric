<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="com.savant.pricing.valueobjects.CustomerCommentsVO"
        table="PRC_Customer_Comments">

        <id
            name="commentId"
            column="Comment_Id"
            type="int">
            
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ContextType.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>
	
       <many-to-one name="prospectiveCustomer" lazy="false" column="Prospective_Cust_ID"/>
			
		<property
            name="cmsCommentId"
            type="int"
            update="true"
            insert="true"
            column="CMS_CommentId"
        />
        
		<property
            name="createdBy"
            type="string"
            update="true"
            insert="true"
            column="Created_By"
        />
        
        <property
            name="createdDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Created_Date"
        />
		
		<property
            name="modifiedBy"
            type="string"
            update="true"
            insert="true"
            column="Modified_By"
        />
		
		
		<property
            name="modifiedDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Modified_Date"
        />
		
		       
       <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="Comments"
        />
       <property
            name="version"
            type="int"
            update="true"
            insert="true"
            column="Version"
        />
       
      
</class>


</hibernate-mapping>
