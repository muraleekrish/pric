<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="com.savant.pricing.valueobjects.TDSPVO"
        table="PRC_TDSP">

        <id
            name="tdspIdentifier"
            column="TDSP_ID"
            type="int">
            
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ContextType.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>
        <many-to-one name="weatherZone" column="Weather_Zone_ID" lazy="false"/>    	
	    <many-to-one name="congestionZone" column="Congestion_Zone_ID" lazy="false"/>
		<property
            name="tdspName"
            type="string"
            update="true"
            insert="true"
            column="TDSP_Name"
        />
		<property
            name="esiIdPrefix"
            type="string"
            update="true"
            insert="true"
            column="ESIID_Prefix"
        />
		<property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="Descrptn"
        />
		
		
		<property
            name="createdBy"
            type="string"
            update="true"
            insert="true"
            column="Created_By"
        />
		
		<property
            name="createdDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Created_Date"
        />
		
		<property
            name="modifiedBy"
            type="string"
            update="true"
            insert="true"
            column="Modified_By"
        />
		
		
		<property
            name="modifiedDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Modified_Date"
        />
		
		<property
            name="valid"
            type="boolean"
            update="true"
            insert="true"
            column="Is_Valid"
        />
        
        <!--
        <map
    		name="meterReadCycles"   
    		table="PRC_Mtr_Read_Cycle"
		    sort="natural"
    		order-by="cycle asc"
    		outer-join="true"
		    batch-size="N"          
		>
		<key column="TDSP_ID"/>
		</map>-->
    </class>

</hibernate-mapping>
