<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="com.savant.pricing.valueobjects.TaxRatesVO"
        table="PRC_Tax_Rates">

        <id
            name="taxRateIdentifier"
            column="Tax_Rate_ID"
            type="int">
            
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ContextType.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>
		<many-to-one name="taxType"  column="Tax_Type_ID" lazy="false" />
		<property
            name="taxRate"
            type="float"
            update="true"
            insert="true"
            column="Tax_Rate"
        />
        
		<property
            name="createdBy"
            type="string"
            update="true"
            insert="true"
            column="Created_By"
        />
		
		<property
            name="createdDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Created_Date"
        />
		
		<property
            name="modifiedBy"
            type="string"
            update="true"
            insert="true"
            column="Modified_By"
        />
		
		
		<property
            name="modifiedDate"
            type="timestamp"
            update="true"
            insert="true"
            column="Modified_Date"
        />
		
		<property
            name="valid"
            type="boolean"
            update="true"
            insert="true"
            column="Is_Valid"
        />

    </class>

</hibernate-mapping>
